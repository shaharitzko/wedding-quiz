<!DOCTYPE html>
<html lang="en" dir="rtl">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
    
</head>
<body data-bs-theme="dark">
    <%-include("header.ejs") %>
    <% if (locals.question) { %>
        <form action="/" method="post">
          <div class="row justify-content-center py-5">
            <div class="col-8 col-sm-6">
              <div class="card text-center">
                <div class="card-header">
                  <%= question.question %>
                </div>
                <% const answers = question.answers; %>
                <div class="btn-group-vertical" role="group" aria-label="Vertical radio toggle button group">
                  <% for (let j = 0; j < answers.length; j++) { %>
                    <% const radioName = "vbtn-radio" + (j+1)%>
                    <input type="radio" class="btn-check" name="vbtn-radio" id=<%= radioName %> autocomplete="off" value=<%= j %>>
                    <label class="btn btn-outline-light" for=<%= radioName %>><%= answers[j].answer %></label>
                  <% } %>
                </div>
                <button class="btn btn-dark btn-outline-info" type="submit">שאלה הבאה</button>
              </div>
            </div>
          </div>
        </form>
    <% } else { %>
      <h1>Error</h1>
    <% } %>
  
    <%-include("footer.ejs") %>
</body>
</html>